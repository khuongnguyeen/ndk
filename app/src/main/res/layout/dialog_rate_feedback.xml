<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_15sdp"
    android:background="@drawable/bg_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/_20sdp"
    android:paddingBottom="@dimen/_20sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:src="@drawable/bg_feedback_top" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txv_dialog_rate_feedback_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="Rate Feedback"
        android:textColor="@color/black"
        android:textSize="24.0dip"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_dialog_rate_feedback_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp"
        android:ellipsize="end"
        android:gravity="top|start"
        android:hint="Rate Content Feedback"
        android:inputType="textMultiLine"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textColorHint="@color/mtrl_textinput_disabled_color"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_cancel_dialog"
            android:gravity="center"
            android:src="@drawable/ic_send"
            android:text="Cancel"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/btn_dialog_feedback_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_enable_dialog"
            android:gravity="center"
            android:src="@drawable/ic_send"
            android:text="Send"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>
